<UserControl x:Class="HaoDouCookbookWP.Controls.CategoryButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="204" Width="204">

    <Grid x:Name="LayoutRoot">
        <Grid.Clip>
            <RectangleGeometry Rect="0,0,204,204"/>
        </Grid.Clip>
        <Ellipse x:Name="ellipse" Fill="#FF1BA1E2" Margin="-60" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <CompositeTransform TranslateY="20"/>
            </Ellipse.RenderTransform>
        </Ellipse>
        <TextBlock x:Name="titleTextBlock" Text="ABCD" Style="{StaticResource HomePage_Tile_Text_Style}"/>
    </Grid>
</UserControl>